{% extends 'base.html.twig' %}

{% block title %} {{ user.getUsername() }}'s profile {% endblock %}

{% block body %}
    <h3>{{ user.getUsername() }}'s profile</h3>
    <div class="row">
        <div class="col-lg-5">
            {% include 'profile/partials/user_block.html.twig' %}
        </div>
        <div class="col-lg-4 col-lg-offset-3">
            <h4>{{ user.getUsername() }}'s friends</h4>

            {% if friends is empty %}
                <p>{{ user.getUsername() }} has no friends</p>
            {% else %}
                {% for user in friends %}
                    {%  include 'profile/partials/user_block.html.twig' %}
                {% endfor %}
            {% endif %}
        </div>
    </div>

{% endblock %}